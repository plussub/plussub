{
  "name": "@plussub/extension",
  "version": "6.2.3",
  "description": "Browser extension which adds subtitle to html5 videos",
  "author": "Stefan Breitenstein",
  "type": "module",
  "exports": {
    "./dist-chrome": "./dist-chrome",
    "./dist-firefox": "./dist-firefox",
    "./src/*": "./src/*"
  },
  "files": [
    "dist-chrome",
    "dist-firefox",
    "src"
  ],
  "scripts": {
    "eslint": "eslint --ext .ts,.vue --ignore-path .gitignore .",
    "tscheck": "tsc --noEmit",
    "gen": "graphql-codegen",
    "start:chrome": "webpack --env browser=chrome --watch",
    "build:chrome": "webpack --env browser=chrome --env mode=production",
    "start:firefox": "webpack --env browser=firefox --watch",
    "build:firefox": "webpack --env browser=firefox --env mode=production",
    "build:all": "npm run build:chrome && npm run build:firefox",
    "test": "jest --no-cache",
    "prepublishOnly": "npm run build:all",
    "postinstall": "rm -r node_modules/apollo-language-server/node_modules/graphql || true"
  },
  "dependencies": {
    "@apollo/client": "^3.6.7",
    "@fortawesome/fontawesome-svg-core": "^1.2.32",
    "@fortawesome/free-solid-svg-icons": "^5.15.1",
    "@plussub/srt-vtt-parser": "^1.1.0",
    "@types/luxon": "^2.3.2",
    "ass-compiler": "^0.1.1",
    "chardet": "^1.3.0",
    "chart.js": "^2.9.4",
    "luxon": "^2.4.0",
    "rxjs": "^7.1.0",
    "typeface-roboto": "^1.1.13",
    "typeface-rubik": "^1.1.13",
    "uuid": "^8.3.0",
    "vue": "^3.2.37"
  },
  "engine": "node >= 0.10",
  "devDependencies": {
    "@fortawesome/fontawesome-free": "^5.14.0",
    "@graphql-codegen/cli": "^2.6.2",
    "@graphql-codegen/typescript": "^2.5.1",
    "@graphql-codegen/typescript-operations": "^2.4.2",
    "@tailwindcss/forms": "^0.5.2",
    "@types/chart.js": "^2.9.29",
    "@types/chrome": "^0.0.190",
    "@types/firefox-webext-browser": "^94.0.1",
    "@types/graphql": "^14.5.0",
    "@types/jest": "^28.1.1",
    "@typescript-eslint/eslint-plugin": "^5.27.1",
    "@typescript-eslint/parser": "^5.27.1",
    "@vue/compiler-sfc": "^3.0.6",
    "autoprefixer": "^10.1.0",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.4.0",
    "cssnano": "^5.0.14",
    "eslint": "^8.17.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-gh-issue": "^0.0.4",
    "eslint-plugin-vue": "^9.1.1",
    "file-loader": "^6.2.0",
    "html-loader": "^3.1.0",
    "jest": "^28.1.1",
    "postcss": "^8.4.14",
    "postcss-loader": "^7.0.0",
    "prettier": "^2.6.2",
    "style-loader": "^3.3.1",
    "tailwindcss": "^3.1.2",
    "ts-jest": "^28.0.4",
    "ts-loader": "^9.3.0",
    "typescript": "^4.7.3",
    "url-loader": "^4.1.1",
    "vue-eslint-parser": "^9.0.2",
    "vue-loader": "^17.0.0",
    "web-ext": "^7.0.0",
    "webpack": "^5.73.0",
    "webpack-cli": "^4.10.0"
  },
  "prettier": {
    "trailingComma": "none",
    "printWidth": 200,
    "singleQuote": true
  },
  "publishConfig": {
    "access": "public"
  }
}
