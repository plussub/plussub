{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2019",
    "baseUrl": "./",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "paths": {
      "@/*": ["src/popup/*"],
      "#/*": ["src/background/*"],
      "getBackgroundPage": ["src/popup/platform/getBackgroundPage/chrome/index.ts"],
      "findVideosInCurrentTab": ["src/popup/platform/findVideosInCurrentTab/chrome/index.ts"],
      "addSubtitleInCurrentTab": ["src/popup/platform/addSubtitleInCurrentTab/chrome/index.ts"],
      "useAppStateStorageListener": ["src/popup/platform/useAppStateStorageListener/chrome/index.ts"],
      "storage": ["src/popup/platform/storage/chrome/index.ts"],
      "contextMenu": ["src/background/platform/contextMenu/chrome/index.ts"]
    },
    "strictNullChecks": true,
    "strictBindCallApply": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.vue",
    "test/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "files": ["vue-shims.d.ts"]
}
