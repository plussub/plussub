{
  "name": "+Sub",
  "version": "4.15.5",
  "manifest_version": 2,
  "description": "Load subtitle to a HTML5 video.",
  "author": "Stefan Breitenstein",
  "icons": {
    "16": "res/icons/plussub16.png",
    "48": "res/icons/plussub48.png",
    "128": "res/icons/plussub128.png"
  },
  "browser_action": {
    "default_icon": {
      "19": "res/icons/browseraction2.png"
    }
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "permissions": [
    "activeTab",
    "storage",
    "https://*.plus-sub.com/*",
    "https://dl.opensubtitles.org/**/*",
    "webRequest"
  ]
}